# ========================================
# WeareHouse Server - Supabase Environment Variables
# ========================================
# Используйте этот файл для настройки Supabase интеграции

# ========================================
# Supabase Configuration
# ========================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# Server Configuration
# ========================================
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=https://your-vercel-app.vercel.app,http://localhost:3000

# ========================================
# Database Configuration (опционально для локальной разработки)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=warehouse_db
DB_USER=warehouse_user
DB_PASSWORD=your_password_here
DB_SSL=false

# ========================================
# Sync Configuration
# ========================================
SYNC_BATCH_SIZE=100
SYNC_TIMEOUT_MS=30000
CONFLICT_RESOLUTION_STRATEGY=latest_wins
SYNC_RATE_LIMIT_DISABLED=false

# ========================================
# Security Configuration
# ========================================
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Notes
# ========================================
# Этот файл предназначен для использования Supabase как основной базы данных
# Локальная PostgreSQL опциональна для разработки
# В production используйте Supabase для всех операций
